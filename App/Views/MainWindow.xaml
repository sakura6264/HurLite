<wpfui:UiWindow
    x:Class="HurLite.BrowserSelector.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HurLite.BrowserSelector.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vs="clr-namespace:HurLite.BrowserSelector.Views"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="HurLite - Select a Browser"
    MinWidth="360"
    MinHeight="200"
    MaxWidth="560"
    MaxHeight="450"
    Deactivated="Window_Deactivated"
    ExtendsContentIntoTitleBar="True"
    KeyUp="Window_Esc"
    SizeChanged="UiWindow_SizeChanged"
    Topmost="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border
        x:Name="WindowBorder"
        BorderBrush="AliceBlue"
        BorderThickness="2"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="26" />
            </Grid.RowDefinitions>

            <Grid MouseLeftButtonDown="Draggable">
                <TextBlock
                    Padding="12,6"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="AliceBlue"
                    Text="Select a Browser" />
                <wpfui:Button
                    Margin="0,2,76,0"
                    Padding="7,5"
                    HorizontalAlignment="Right"
                    Background="#40000000"
                    Click="LinkCopyBtnClick">
                    <wpfui:SymbolIcon Symbol="Copy24" />
                </wpfui:Button>
                <wpfui:Button
                    Margin="0,2,40,0"
                    Padding="7,5"
                    HorizontalAlignment="Right"
                    Background="#40000000"
                    Click="SettingsBtnClick">
                    <wpfui:SymbolIcon Symbol="Settings24" />
                </wpfui:Button>
                <wpfui:Button
                    Margin="0,2,4,0"
                    Padding="7,5"
                    HorizontalAlignment="Right"
                    Background="#40000000"
                    Click="CloseBtnClick">
                    <wpfui:SymbolIcon Symbol="Dismiss24" />
                </wpfui:Button>
            </Grid>

            <Grid Grid.Row="1">
                <vs:BrowsersList DataContext="{Binding viewModel}" />
                <!--<StackPanel
                        x:Name="stacky"
                        VerticalAlignment="Center"
                        MouseWheel="ScrollViewer_MouseWheel"
                        Orientation="Horizontal">
                </StackPanel>-->
            </Grid>

            <TextBlock
                x:Name="linkpreview"
                Grid.Row="2"
                MaxWidth="360"
                Padding="5,1,5,1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Calibri"
                FontSize="10"
                Foreground="AliceBlue" />
        </Grid>
    </Border>
</wpfui:UiWindow>